<div class="container">
<h1 class="welcome text-center">Welcome</h1>
    <div class="card card-container">
    <h2 class='login_title text-center'>Login</h2>
    <hr>

        <form class="form-signin" action="{{ path('login') }}" method="post">
            <span id="reauth-email" class="reauth-email"></span>
            <p class="input_title">Email</p>
            <input type="text" id="username" name="_username" class="login_box" placeholder="username" value="{{ last_username }}" required autofocus>
            <p class="input_title">Password</p>
            <input type="password" id="password" name="_password" class="login_box" placeholder="******" required>
            <div id="remember" class="checkbox">
            <label>
            {% if error %}
                <div style="color:red">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
            </label>
            </div>

            {#
                If you want to control the URL the user
                is redirected to on success (more details below)
                <input type="hidden" name="_target_path" value="/account" />
            #}

            <button class="btn btn-lg btn-primary" type="submit">Login</button>
        </form><!-- /form -->
    </div><!-- /card-container -->
</div><!-- /container -->
